<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdatePassword">

    <TextView
        android:id="@+id/newPassText"
        android:layout_below="@id/logo"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_marginTop="120dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Lütfen Yeni Şifrenizi Belirleyiniz" />

    <EditText
        android:id="@+id/newPassword"
        android:layout_width="match_parent"
        android:layout_height = "wrap_content"
        android:inputType="textPassword"
        android:hint="Şifre"
        android:layout_margin="10dp"
        android:layout_below="@+id/newPassText" />

    <EditText
        android:id="@+id/newPasswordCorrect"
        android:layout_width="match_parent"
        android:layout_height = "wrap_content"
        android:inputType="textPassword"
        android:hint="Şifre Tekrar"
        android:layout_margin="10dp"
        android:layout_below="@+id/newPassword" />

    <Button
        android:id="@+id/newPasswordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newPasswordCorrect"
        android:layout_centerInParent="true"
        android:text="Onayla" />

</RelativeLayout>